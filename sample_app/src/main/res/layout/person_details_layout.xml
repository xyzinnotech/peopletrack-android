<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">
    <LinearLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/profile_upload_name"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Name"
        android:background="@drawable/profile_edit_text_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:enabled="false"
        android:id="@+id/profile_upload_email"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="TimeStamp"
        android:background="@drawable/profile_edit_text_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <EditText
        android:id="@+id/profile_upload_working_type"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Working Type"
        android:background="@drawable/profile_edit_text_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="0.5"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/profile_submit"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="SUBMIT"
            android:background="@drawable/guest_login"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>